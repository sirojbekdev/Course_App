@using Microsoft.AspNetCore.WebUtilities;
@inject NavigationManager Navigation

<Search  Placeholder="Search" AllowClear EnterButton="true" @bind-Value="SearchTerm" OnSearch="Search" />
<Divider/>

@code {
    string SearchTerm;
    private void Search()
    {
        var queryStrDict = new Dictionary<string, string>()
            {
                ["SearchTerm"] = SearchTerm
            };
        Navigation.NavigateTo(QueryHelpers.AddQueryString("/Search", queryStrDict));
    }
}
